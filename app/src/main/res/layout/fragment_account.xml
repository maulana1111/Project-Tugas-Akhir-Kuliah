<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#49426C"
    tools:context=".fragment.AccountFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical"
                android:id="@+id/ly_data">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textColor="#EDC08B"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="17dp"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:id="@+id/ed_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="Nama"
                        android:textColorHint="#EDC08B"
                        android:textColor="#EDC08B" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="#EDC08B"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="15dp"
                        android:textSize="17dp"/>

                    <EditText
                        android:id="@+id/ed_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="Username"
                        android:textColorHint="#EDC08B"
                        android:textColor="#EDC08B"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="#EDC08B"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="15dp"
                        android:textSize="17dp"/>

                    <EditText
                        android:id="@+id/ed_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColorHint="#EDC08B"
                        android:textColor="#EDC08B"
                        app:endIconMode="password_toggle" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Key"
                        android:textColor="#EDC08B"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="15dp"
                        android:textSize="17dp"/>

                    <EditText
                        android:id="@+id/ed_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColorHint="#EDC08B"
                        android:textColor="#EDC08B"
                        app:endIconMode="password_toggle" />

                    <TextView
                        android:id="@+id/btn"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:padding="8dp"
                        android:textColor="#363257"
                        android:background="@drawable/btn_rounded_med"
                        android:backgroundTint="#EDC08B"
                        android:text="Ubah"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="20dp"/>



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/ly_error">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Something Error"
                    android:layout_marginTop="80dp"
                    android:textSize="30dp"
                    android:textColor="#EDC08B"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>