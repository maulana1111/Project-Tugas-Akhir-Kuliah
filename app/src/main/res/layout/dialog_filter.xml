<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Masukan Filter"
        android:background="#49426C"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#EDC08B"/>

        <EditText
            android:id="@+id/ed_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:focusable="false"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="From"/>

        <EditText
            android:id="@+id/ed_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:focusable="false"
            android:fontFamily="@font/poppins_medium"
            android:hint="To"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Status ?"
        android:textColor="#49426C"
        android:fontFamily="@font/poppins_medium"
        android:textSize="17dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"/>


    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_terima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#49426C"
            android:text="Diterima" />

        <RadioButton
            android:id="@+id/rb_proses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#49426C"
            android:text="Diproses" />

        <RadioButton
            android:id="@+id/rb_tolak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#49426C"
            android:text="Ditolak" />
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_medium"
            android:hint="Key"
            android:maxLength="16"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>