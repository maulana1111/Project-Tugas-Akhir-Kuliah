<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#49426C"
    android:layout_height="match_parent"
    tools:context=".activity.FormAdminActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:id="@+id/ly_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/btn_rounded_med"
                    android:backgroundTint="#363257"
                    android:orientation="horizontal"
                    android:paddingLeft="18dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:layout_weight="0"
                        android:src="@drawable/ic_arrow_back" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="60dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Form Admin"
                    android:textColor="#EDC08B"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="#EDC08B"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/ed_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Nama"
                    android:textColorHint="#EDC08B"
                    android:textColor="#EDC08B" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#EDC08B"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="15dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/ed_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Username"
                    android:textColorHint="#EDC08B"
                    android:textColor="#EDC08B"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#EDC08B"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="15dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#EDC08B"
                    app:endIconMode="password_toggle" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level Admin"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#EDC08B"/>


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rb_group_level">

                    <RadioButton
                        android:id="@+id/rb_pertama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pertama"
                        android:textSize="16dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginRight="8dp"
                        android:textColor="#EDC08B" />

                    <RadioButton
                        android:id="@+id/rb_kedua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kedua"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#EDC08B"/>
                </RadioGroup>



                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aksess"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#EDC08B"/>


                <RadioGroup
                    android:id="@+id/rb_group_akses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp" >

                    <RadioButton
                        android:id="@+id/rb_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="True"
                        android:textSize="16dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginRight="8dp"
                        android:textColor="#EDC08B" />

                    <RadioButton
                        android:id="@+id/rb_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="False"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#EDC08B"/>
                </RadioGroup>


                <TextView
                    android:id="@+id/tv_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key"
                    android:textColor="#EDC08B"
                    android:visibility="gone"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="15dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/ed_key"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#EDC08B"
                    app:endIconMode="password_toggle" />

                <TextView
                    android:id="@+id/btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:padding="8dp"
                    android:textColor="#363257"
                    android:background="@drawable/btn_rounded_med"
                    android:backgroundTint="#EDC08B"
                    android:text="Submit"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20dp"/>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>